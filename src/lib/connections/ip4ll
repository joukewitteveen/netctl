

ip4ll_up() {
  if ! is_interface "$Interface"; then
    report_error "Interface '$Interface' does not exist"
    return 1
  fi

  avahi-autoipd --daemonize --wait "$Interface"
}

ip4ll_down() {
  avahi-autoipd --kill "$Interface"
  bring_interface_down "$Interface"
}

