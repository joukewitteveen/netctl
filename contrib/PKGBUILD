# Maintainer:  Jouke Witteveen  <j.witteveen@gmail.com>
# Contributor: Federico Cinelli <cinelli.federico@gmail.com>
pkgname=netctl
pkgver=%pkgver%
pkgrel=1
pkgdesc="Profile based systemd network management"
url="http://projects.archlinux.org/netctl.git/"
license=("GPL")
depends=("coreutils" "iproute2" "openresolv" "dhcpcd" "wpa_actiond")
#makedepends=('asciidoc')  # The source tarball includes pre-built documentation.
optdepends=('dialog: for the menu based wifi assistant'
            'dhclient: alternative DHCP support'
            'ifplugd: for automatic wired connections through netctl-ifplugd'
            'ifenslave: for bond connections'
            'bridge-utils: for bridge connections'
           )
conflicts=("netcfg")
source=(ftp://ftp.archlinux.org/other/netctl/netctl-${pkgver}.tar.xz)
arch=(any)
md5sums=('%md5sum%')

package() {
  cd "$srcdir/netctl-${pkgver}"
  make DESTDIR="$pkgdir" install

  # Shell Completion
  install -D -m644 contrib/bash-completion "$pkgdir/usr/share/bash-completion/completions/netctl"
  install -D -m644 contrib/zsh-completion "$pkgdir/usr/share/zsh/site-functions/_netctl"
}

